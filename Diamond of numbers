void printPatt(int n)
{
   int i,j,k,num=1;
    for(i=1;i<=n/2+1;i++)
    {
        for(j=i;j<n/2+1;j++)
           printf(" ");
        for(k=2*i-1;k>0;k--)
        {
           printf("%d",num);num++;
        }num=1;
        printf("\n");
    }
     for(i=n/2;i>=1;i--)
    {
        for(j=i;j<n/2+1;j++)
           printf(" ");
        for(k=2*i-1;k>0;k--)
        {
           printf("%d",num);num++;
        }num=1;
        printf("\n");
    }

}
