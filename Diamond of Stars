void printPatt(int n)
{
   int i,j,k;
   for(i=1;i<=n/2+1;i++)
    {
        for(j=n/2+1;j>i;j--)
         printf(" ");
        
    for(k=1;k<=2*i-1;k++)
      printf("*");
    
    
    printf("\n");
    }
    for(i=n/2;i>=1;i--)
    {
        for(j=n/2+1;j>i;j--)
            printf(" ");
        
    for(k=2*i-1;k>=1;k--)
      printf("*");
    
    printf("\n");
    }
    
  
}
