#include <stdio.h>

int main() {
int i,j,k,n;
    scanf("%d",&n);
    int num1=1,num2=0;
    for(i=1;i<=n;i++)
{
    for(j=n;j>i;j--)
    {
    printf(" "); 
    }
    for(k=i;k>=1;k--)
    {
        printf("%d",num1);
        num1++;
    }num1=num1-i+1;
    for(k=2*i-1;k>=i+1;k--)
    {
        printf("%d",num2);
        num2--;
    }  num2=num2+i+1;  
printf("\n");
}
}
