void printPatt(int n)
{
    int i,j,k;
    for(i=1;i<=n/2+1;i++)
    {
        for(j=1;j<i;j++)
            printf(" ");
        for(k=1;k<=i;k++)
            printf("* ");
        printf("\n");
    }
     for(i=n/2;i>=1;i--)
     {
         for(j=1;j<i;j++)
             printf(" ");
         for(k=1;k<=i;k++)
             printf("* ");
         printf("\n");
     }
}
